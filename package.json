{
  "name": "manga-reader-downloader",
  "version": "1.0.0",
  "main": "electron-main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev"
  },
  "description": "Desktop manga reader and downloader",
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "fs-extra": "^11.2.0",
    "axios": "^1.6.0",
    "playwright": "^1.40.0",
    "playwright-extra": "^4.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-reload": "^2.0.0"
  },
  "build": {
    "appId": "com.mangareader.app",
    "productName": "Manga Reader & Downloader",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron-main.js",
      "main.js",
      "index.html",
      "styles.css",
      "renderer.js",
      "scrapers/**/*"
    ]
  }
